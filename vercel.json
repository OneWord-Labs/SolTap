{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "dist/**",
          "package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/assets/$1"
    },
    {
      "src": "/game",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.*)\\.js",
      "dest": "dist/$1.js"
    },
    {
      "src": "/(.*)\\.css",
      "dest": "dist/$1.css"
    },
    {
      "src": "/(.+)",
      "dest": "dist/index.html"
    },
    {
      "src": "/",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001"
  }
} 