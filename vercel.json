{
  "version": 2,
  "functions": {
    "api/webhook.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/webhook",
      "methods": ["POST", "OPTIONS"],
      "dest": "api/webhook.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/server/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/dist/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/dist/manifest.json"
    },
    {
      "src": "/(.*).js",
      "dest": "/dist/$1.js"
    },
    {
      "src": "/(.*).css",
      "dest": "/dist/$1.css"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
} 