{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true
  },
  "include": ["src/server/**/*", "src/services/**/*", "src/config/**/*", "src/utils/**/*"],
  "exclude": ["node_modules"]
} 